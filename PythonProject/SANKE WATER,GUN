if randNo ==1:
    comp='s'
elif randNo ==2:
    comp='w'
elif randNo ==3:
 comp='g'
    
you= input("Your True: Snake üêç (s)Water üíß (w) Gun üî´ (g):-")
a= gameWin (comp,you)

print (f"üñ• Computer choose {comp}")
print (f"You choose {you}")
if a== None:
    print ("The game is a tie !")
elif a:
    print ("Shailesh you are wan!")
